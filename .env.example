# Target URL to monitor
TARGET_URL=https://apps.mep.go.cr/formulario

# Optional: CSS selector to extract specific content (e.g., .main-content, #articles, body)
# Leave empty to use entire body
CONTENT_SELECTOR=".mud-table-container"

# Optional: Use a real browser (Playwright) when the page needs JS or a dropdown to load data
# Set to 1 or true to enable. Requires: npm install (playwright is already a dependency)
USE_PLAYWRIGHT=1
HEADLESS=1

# When USE_PLAYWRIGHT=1, optional dropdown to select before capturing content
# DROPDOWN_SELECTOR = CSS selector for the <select> (e.g. #period, select[name=range])
# DROPDOWN_OPTION_VALUE = option value to select (e.g. 7 for <option value="7">)
# DROPDOWN_OPTION_LABEL = option label to select (e.g. "Last 7 days") — use one of VALUE or LABEL
# DROPDOWN_WAIT_AFTER_MS = ms to wait after selecting (default 2000)
DROPDOWN_SELECTOR="#regionalSelect"
DROPDOWN_OPTION_VALUE=53
DROPDOWN_OPTION_LABEL="Regional Educación Perez Zeledon"
DROPDOWN_WAIT_AFTER_MS=2000

TABLE_FILTER_ESPECIALIDAD_VALUE="Español"
# TABLE_FILTER_ESPECIALIDAD_VALUE="Inglés"
TABLE_FILTER_ESPECIALIDAD="Especialidad"
TABLE_FILTER_LECCIONES="Lecciones"
TABLE_FILTER_PUESTO="Clase de Puesto"
TABLE_FILTER_INSTITUCION="Institución"
TABLE_CELL_NAMES="Vacante,Especialidad,Clase de Puesto,Institución,Lecciones"

# Notification: choose one or both

